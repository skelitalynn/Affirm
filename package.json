{
  "name": "affirm-agent",
  "version": "1.0.0",
  "description": "Affirm项目 - 基于OpenClaw + Telegram的显化导师Agent",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:migrate": "node scripts/database/migrate.js",
    "db:seed": "node scripts/database/seed.js",
    "db:reset": "node scripts/database/reset.js",
    "verify": "node scripts/utils/verify-environment.js",
    "verify:quick": "./scripts/utils/quick-verify.sh",
    "admin": "node src/admin/server.js",
    "admin:dev": "nodemon src/admin/server.js",
    "start:all": "concurrently \"npm start\" \"npm run admin\""
  },
  "keywords": [
    "openclaw",
    "telegram",
    "ai",
    "affirm",
    "memory",
    "vector-search"
  ],
  "author": "skelitalynn",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.8.0",
    "@notionhq/client": "^5.11.0",
    "basic-auth": "^2.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^4.0.1",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "node-fetch": "^2.6.0",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^4.0.0",
    "pg": "^8.11.0",
    "pgvector": "^0.2.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skelitalynn/Affirm.git"
  },
  "bugs": {
    "url": "https://github.com/skelitalynn/Affirm/issues"
  },
  "homepage": "https://github.com/skelitalynn/Affirm#readme"
}
